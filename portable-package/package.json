{
  "name": "cloud-engine",
  "version": "0.1.5",
  "description": "CloudEngine: layered cloud SVG engine with React component CloudMaker.",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakekinchen/cloud-test.git",
    "directory": "portable-package"
  },
  "homepage": "https://github.com/jakekinchen/cloud-test#readme",
  "bugs": {
    "url": "https://github.com/jakekinchen/cloud-test/issues"
  },
  "keywords": [
    "react",
    "svg",
    "clouds",
    "background",
    "animation",
    "noise",
    "hero",
    "component"
  ],
  "author": {
    "name": "Jake Kinchen"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "assets",
    "cloudDefaults.json"
  ],
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --dts --clean",
    "preversion": "node ../scripts/sync-portable.mjs",
    "prepack": "node ../scripts/sync-portable.mjs && npm run build",
    "prepublishOnly": "npm run build"
  }
}
