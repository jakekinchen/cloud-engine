{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules"]
}
